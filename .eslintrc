{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "arrow-parens": ["error", "always"],
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "no-unused-vars": ["error", {"varsIgnorePattern": "^log"}],
    "id-length": [2, {"exceptions": ["e", "i"]}]
  }
}
